{
  "extends": "@tooling/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "ui/*": [
        "./*"
      ],
      "ui/components/ui/*": [
        "src/components/ui/*"
      ],
      "ui/hooks/*": [
        "./hooks/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/**/*.tsx",
    "src/lib/utils.js",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ]
}