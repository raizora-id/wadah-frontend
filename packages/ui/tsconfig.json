{
  "extends": "@tooling/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "ui/*": [
        "./*"
      ],
      "ui/components/ui/*": [
        "src/components/base/*"
      ],
      "ui/hooks/*": [
        "./hooks/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/**/*.tsx",
    "src/lib/utils.js",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ]
}