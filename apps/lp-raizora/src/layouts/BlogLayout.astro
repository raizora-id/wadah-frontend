---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout>
  <section>
    <div class="p-8 max-w-7xl mx-auto border-x border-gray border-b lg:py-32">
      <div class="max-w-2xl mx-auto">
        <span class="text-neutral-400 font-light"
          >{frontmatter.pubDate.toString().slice(0, 10)} - {
            frontmatter.author
          }</span
        >
        <h1 class="text-white mt-6 text-2xl font-light">
          {frontmatter.title}
        </h1>
        <p class="text-neutral-400 mt-6">
          <em>{frontmatter.description}</em>
        </p>
        <div class="flex flex-wrap gap-3 mt-12">
          {
            frontmatter.tags.map((tag) => (
              <span class="inline-flex items-center text-xs font-thin text-white   font-mono hover:text-neutral-400">
                <a href={`/tags/${tag}`}>{tag}</a>
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="p-8 max-w-7xl mx-auto border-x border-gray border-b">
      <div
        class="prose-styles">
        <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
