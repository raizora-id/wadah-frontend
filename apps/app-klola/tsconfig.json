{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
      "@ui/globals.css": [
        "../../packages/ui/globals.css"
      ],
      "@/*": [
        "./src/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@generated/*": [
        "./__generated__/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@ui/lib/*": [
        "../../packages/ui/src/lib/*"
      ],
      "@ui/hooks/*": [
        "../../packages/ui/src/hooks/*"
      ],
      "@ui/config/*": [
        "../../packages/ui/src/config/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    },
    "target": "ES2023",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "additional.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}