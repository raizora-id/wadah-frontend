---
import BaseHead from "@/components/BaseHead.astro";
import { Footer } from '@packages/ui/components/layouts/footers/footer-ketuju';
import { Navigation } from '@packages/ui/components/layouts/headers/header-ketuju';
import Contact from "@/components/forms/Contact.astro";
import Config from "../../site.config.js";
---

<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="2xl:max-w-7xl mx-auto flex flex-col min-h-svh">
    <Navigation client:visible/>
    <Contact />
    <main class="grow"><slot /></main>
    <Footer productName={Config.title} description={Config.description} />
  </body>
</html>
