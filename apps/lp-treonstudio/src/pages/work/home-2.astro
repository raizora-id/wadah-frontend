---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import WorkEntries2 from "@/components/work/WorkEntries2.astro";
// Content
import { getCollection } from "astro:content";
const allWork = await getCollection("work");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24 lg:py-48">
      <Text
        tag="h1"
        variant="displayXL"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="dark:text-white text-base-900 font-medium tracking-tighter"
      >
        all case studies
      </Text>
      <div class="flex flex-col gap-2 mt-2">
        {
          allWork.map((post, index) => (
            <WorkEntries2 post={post} index={index + 1} />
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
