---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import StoreEntries3 from "@/components/store/StoreEntries3.astro";
// Content
import { getCollection } from "astro:content";
const allProducts = await getCollection("store");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24 lg:py-48">
      <div class="overflow-hidden">
        <Text
          tag="h1"
          variant="displayXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="dark:text-white text-base-900 font-medium tracking-tighter"
        >
          store
        </Text>
      </div>
      <div class="flex flex-col gap-2 mt-2">
        {allProducts.map((post) => <StoreEntries3 post={post} />)}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
