---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
const { index } = Astro.props;

const { url, title, description, pubDate, image, author } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  author: Astro.props.post.data.author,
  image: Astro.props.post.data.image.url,
  description: Astro.props.post.data.description,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<div class="relative group py-4">
  <a class="absolute inset-0 z-10" href={url} title={title}></a>
  <div class="relative grid grid-cols-1 gap-12 lg:grid-cols-2 lg:items-center">
    <Image
      src={image}
      alt={title}
      width={1000}
      height={100}
      class="size-full aspect-square object-cover object-center lg:order-last"
    />
    <div>
      <Text
        tag="h3"
        variant="displayLG"
        class="dark:text-white text-base-900 font-medium tracking-tighter text-balance"
      >
        (0{index}) {title}
      </Text>

      <Text
        tag="p"
        variant="textXL"
        class="text-base-500 mt-2 dark:text-base-400 text-balance"
      >
        {description}
      </Text>
      <Text tag="p" variant="textXS" class="dark:text-base-400 text-base-600 mt-8"
        >{author} â€” <timed date={pubDate}>{pubDate}</timed></Text
      >
    </div>
  </div>
</div>
