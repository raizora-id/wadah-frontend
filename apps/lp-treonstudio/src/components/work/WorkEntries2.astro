---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
const { title, url, thumbnail } = {
  url: "/work/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  thumbnail: Astro.props.post.data.thumbnail.url,
};
---
<div class="sticky top-20 z-10">
  <div class="relative overflow-hidden group">
    <a class="absolute inset-0 z-20" href={url} title={title}></a>
    <div class="relative">
      <Image
        src={thumbnail}
        alt={title}
        width={1000}
        height={100}
        class="size-full aspect-[8/4] object-cover object-center"
      />
    </div>
  </div>
</div>
