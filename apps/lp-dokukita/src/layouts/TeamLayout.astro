---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl lg:py-32">
    <span class="uppercase tracking-wide font-medium text-regent-600">
      ⏤
      {frontmatter.role}
    </span>
    <div class="flex items-center mt-16 gap-4">
      <img
        class="aspect-w-1 aspect-h-1 w-16 h-16 rounded-full bg-regent-100"
        src={frontmatter.avatar.url}
        alt={frontmatter.avatar.alt}
        class="w-full"
      />
      <h1 class="text-4xl lg:text-6xl font-medium text-black text-balance">
        {frontmatter.name}
      </h1>
    </div>
    <p
      class="text-black/80 text-lg lg:text-xl tracking-wid font-medium text-balance mt-8"
    >
      {frontmatter.intro}
    </p>
    <dl class="relative flex flex-wrap mt-12">
      <div>
        <dt class="text-black font-medium lg:text-xl text-lg">Education</dt>
        <dd>
          <ul class="text-base text-gray-500 mt-4">
            {frontmatter.education.map((item) => <li> ⏤ {item}</li>)}
          </ul>
        </dd>
      </div>
      <div class="border-l border-gray-300 ml-6 pl-6 lg:ml-8 lg:pl-8">
        <dt class="text-black font-medium lg:text-xl text-lg">Date</dt>
        <dd class="text-base text-gray-500">
          <ul class="text-base text-gray-500 mt-4">
            {frontmatter.experience.map((item) => <li>⏤ {item}</li>)}
          </ul>
        </dd>
      </div>
    </dl>

    <div class="prose-styles border-t mt-12 pt-6 border-gray-300">
      <slot />
    </div>
  </div>
</BaseLayout>
