---
const pricingPlans = [
  {
    planType: "Monthly",
    price: "$1,999/m",
    discountNote: "50% off for the 3 first clients!",
    features: [
      "Limited number of users (up to 5)",
      "Limited storage (1 GB)",
      "Basic support (email only)",
      "Basic analytics",
      "Limited integrations",
    ],
    bgColor: "bg-white",
    buttonClasses:
      "bg-regent-500 hover:bg-regent-100 focus:ring-regent-500 text-black",
  },
  {
    planType: "Annual",
    price: "$999/m",
    discountNote: "Save $300 per month.",
    features: [
      "Unlimited number of users",
      "Unlimited storage",
      "Advanced support",
      "Advanced analytics",
      "Multiple integrations",
      "Advanced customization options",
      "99.9% SLA",
    ],
    bgColor: "bg-regent-500",
    buttonClasses:
      "text-black bg-white hover:text-white focus:ring-regent-900 hover:bg-regent-900",
  },
];
---

<section class="bg-regent-500">
  <div
    class="items-center w-full px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl text-center lg:pt-36 lg:pb-0">
    <span
      class="text-base items-center inline-flex uppercase tracking-wide font-medium text-black">
      Accessible pricing
    </span>
    <p
      class="text-2xl sm:text-3xl md:text-5xl lg:text-7xl        font-medium text-black">
      Equip your business <span class="block">with world class software</span>
    </p><p class="max-w-xl mt-4 text-lg text-black/80 mx-auto font-medium">
      We help sales teams increase their outbound with scalable and high
      quality customized emails for every prospect.
    </p>

  </div>
  <div class="grid lg:grid-cols-2 mt-12 ">
    {
      pricingPlans.map((plan, index) => (
        <div
          class={`${plan.bgColor} md:p-12 lg:p-12 p-8 h-full flex flex-col justify-between`}>
          <div>
            <h3 class="text-lg lg:text-2xl font-medium uppercase tracking-wide text-center text-black">
              {plan.planType}
            </h3>
            <p class="py-12 text-center">
              <span class="text-lg lg:text-6xl text-black">
                {plan.price}
              </span>
            </p>
            <p class="mt-2 text-base text-gray-500 text-center">
              {plan.discountNote}
            </p>
            <div class="mt-8 lg:px-20">
              <ul
                class="text-xl space-y-3 text-black"
                role="list">
                {plan.features.map((feature, featureIndex) => (
                  <li class="flex items-start">
                    <svg
                      class="size-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      stroke="currentColor"
                      stroke-width="1.5">
                      <path
                        d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                    <span class="ml-4">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
          <div class="mt-8">
            <a
              href="#"
              class={`inline-flex items-center justify-center w-full px-6 py-4 text-center font-medium rounded-full text-base focus:outline-none focus:ring-2 focus:ring-offset-2 ring-offset-2 ${plan.buttonClasses}`}>
              Get started
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>
