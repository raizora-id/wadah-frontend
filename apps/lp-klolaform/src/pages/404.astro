---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="flex min-h-full flex-col bg-regent-500 pt-16 pb-12">
    <main
      class="mx-auto flex w-full max-w-7xl flex-grow flex-col justify-center px-6 lg:px-8">
      <div class="py-16 lg:py-48">
        <div class="text-center">
          <span class="uppercase tracking-wide font-medium text-white">
            oooops! ⏤
          </span>
          <h1
            class="text-4xl lg:text-7xl        font-medium text-black mt-8">
            Page not found.
          </h1>
          <p
            class="max-w-xl mt-4 mx-auto text-lg text-black/80 font-medium">
            Sorry, we couldn’t find the page you’re looking for.
          </p>
          <div class="mt-6 flex justify-center">
            <a
              href="/"
              class="flex items-center lg:text-xl w-auto justify-center  px-6 py-4 text-center duration-200 font-medium rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-regent-900 ring-offset-2 bg-white hover:bg-regent-900 hover:text-white text-black">
              Go back home
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
